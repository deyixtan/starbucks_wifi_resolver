{
    "manifest_version": 2,
    "name": "starbucks_wifi_resolver",
    "version": "1.0",
    
    "description": "Resolve Singapore Starbucks Wi-Fi.",
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    
    "browser_action": {
        "default_popup": "popup.html"
    },

    "author": "De Yi",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "homepage_url": "https://github.com/deyixtan",
    "permissions": [
        "storage",
        "webRequest",
        "<all_urls>"
    ]
}
